<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--BASE CON BORDE-->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="@color/grisMedio" />
            <stroke
                android:width="1dp"
                android:color="@color/grisOscuro"></stroke>
        </shape>
    </item>
    <!-- BRILLO-->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <gradient
                android:angle="225"
                android:centerColor="@color/grisMedio"
                android:endColor="@color/grisClaro"
                android:startColor="@color/grisMedio"
                android:type="linear" />
        </shape>
    </item>
    <!--RECORTE DEL BRILLO-->
    <item
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@color/grisMedio" />
        </shape>
    </item>

    <!--RECORTE DEL BRILLO-->
    <item
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:angle="45"
                android:centerColor="@color/grisMedio"
                android:endColor="#929292"
                android:startColor="@color/grisMedio"
                android:type="linear" />        </shape>
    </item>
</layer-list>